<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ViewsDemo.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="border-1 bg-primary text-white w-100" style="height:100px;">
        <h1>Website Header</h1>
    </div>
    <div class="border-1 bg-warning w-100" style="height:200px;">
        @RenderBody()
    </div>
    <div class="border-1 bg-info w-100" style="height:50px;">
        <h1>Website Footer</h1>
    </div>
</body>
</html>